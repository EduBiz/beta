<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN" "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
  
  <field name="uname">
        <field-validator type="requiredstring">
            <message>User Name is required.</message>
        </field-validator>
  </field>
      
  <field name="email">
      <field-validator type="email">
             <message>Email address is not valid</message>
        </field-validator>
        <field-validator type="requiredstring">
            <message>Email is required.</message>
        </field-validator>  
  </field>
  <field name="pwd">
        <field-validator type="requiredstring">
            <message>Password is required.</message>
        </field-validator> 
        <field-validator type="stringlength">
             <param name="minLength">6</param>
             <message>Password must contain at least ${minLength} characters</message>
        </field-validator>
  </field>
  <field name="confirmpwd">
        <field-validator type="requiredstring">
            <message>Confirm Password is required.</message>
        </field-validator>  
  </field>
  
  <validator type="expression">
       <param name="expression">pwd == confirmpwd</param>
       <message>Password and confirm password do not match!</message>
  </validator>
            
</validators>

