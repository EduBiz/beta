<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN" "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
  
  <field name="fname">
        <field-validator type="requiredstring">
            <message>First Name is required.</message>
        </field-validator>
  </field>
  <field name="lname">
        <field-validator type="requiredstring">
            <message>Last Name is required.</message>
        </field-validator>
  </field>
    
  <field name="email">
      <field-validator type="email">
             <message>Email address is not valid</message>
        </field-validator>
        <field-validator type="requiredstring">
            <message>Email is required.</message>
        </field-validator>  
  </field>
  <field name="pwd">
        <field-validator type="requiredstring">
            <message>Password is required.</message>
        </field-validator> 
        <field-validator type="stringlength">
             <param name="minLength">5</param>
             <message>Password must contain at least ${minLength} characters</message>
        </field-validator>
  </field>
  <field name="pwd1">
        <field-validator type="requiredstring">
            <message>Confirm Password is required.</message>
        </field-validator>  
  </field>
  <field name="dob">
        <field-validator type="requiredstring">
            <message>Date of Birth is required.</message>
        </field-validator>  
  </field>
  <field name="addline1">
        <field-validator type="requiredstring">
            <message>Address Line 1 is required.</message>
        </field-validator>  
  </field>
  <field name="ctry">
        <field-validator type="requiredstring">
            <message>Country is required.</message>
        </field-validator>  
  </field>
  <field name="storeg">
        <field-validator type="requiredstring">
            <message>State/Region is required.</message>
        </field-validator>  
  </field>
  <field name="city">
        <field-validator type="requiredstring">
            <message>City is required.</message>
        </field-validator>  
  </field>
  <field name="postcode">
        <field-validator type="requiredstring">
            <message>Postal/Zip code is required.</message>
        </field-validator>  
  </field>
  <validator type="expression">
       <param name="expression">pwd == pwd1</param>
       <message>Password and confirm password do not match!</message>
  </validator>
    
</validators>

